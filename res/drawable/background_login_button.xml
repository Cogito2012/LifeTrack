<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#A0006999" android:endColor="#A0006999" android:angle="270" />
            <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>        
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#A0006999" android:endColor="#A0006999" android:angle="270" />
            <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>        
        </shape>
    </item>
    <!-- 按钮正常颜色 -->
    <item>
        <shape>
            <gradient android:startColor="#A0007DFF" android:endColor="#A0007DFF" android:angle="270" />
            <corners android:radius="10dp"/>        
        </shape>
    </item>
</selector>